{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "express"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "src/modules/auth/user.model.ts",
    "user.handler.ts",
    "src/modules/auth/auth.routes.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}